# Zephyr Scale Configuration
# Copy this file to .env and fill in your values

# Jira Base URL
# For Cloud: https://your-domain.atlassian.net
# For Server/DC: https://your-jira-server.com
ZEPHYR_BASE_URL=https://your-domain.atlassian.net

# Zephyr Scale API Token
# Cloud: Generate from https://smartbear.com/plugins/zephyr-scale/api-tokens
# Server/DC: Generate from Jira user settings
ZEPHYR_API_TOKEN=your_api_token_here

# Jira Project Key (e.g., PROJ, TEST, etc.)
ZEPHYR_PROJECT_KEY=PROJ

# Zephyr Version
# Set to 'true' for Zephyr Scale Cloud
# Set to 'false' for Zephyr Scale Server/Data Center
ZEPHYR_IS_CLOUD=true
